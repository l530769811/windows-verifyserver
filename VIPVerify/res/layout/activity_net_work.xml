    <RelativeLayout
        android:id="@+id/relativeLayout_server_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativelayout_network_setting"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/textView_server_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/string_loginserver" />

        <TextView
            android:id="@+id/textView_server_login_kind"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView_server_setting"
            android:layout_alignStart="@+id/textView_server_setting"
            android:layout_below="@+id/textView_server_setting"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:text="@string/string_network_kind" />

        <Spinner
            android:id="@+id/spinner_server_kind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_server_login_kind"
            android:layout_alignTop="@+id/textView_server_login_kind"
            android:layout_toEndOf="@+id/textView_server_setting"
            android:layout_toRightOf="@+id/textView_server_setting"
            android:gravity="bottom"
            android:textColor="#00A0FF" />

        <TextView
            android:id="@+id/textView_server_ip_addr"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView_server_login_kind"
            android:layout_alignStart="@+id/textView_server_login_kind"
            android:layout_below="@+id/textView_server_login_kind"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:text="@string/string_id_addr" />

        <EditText
            android:id="@+id/editText_server_ip_addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_server_ip_addr"
            android:layout_alignTop="@+id/textView_server_ip_addr"
            android:layout_toEndOf="@+id/textView_server_setting"
            android:layout_toRightOf="@+id/textView_server_setting"
            android:ems="10"
            android:gravity="bottom"
            android:inputType="textPostalAddress"
            android:textColor="#00A0FF" />

        <TextView
            android:id="@+id/textView_server_port"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/textView_server_ip_addr"
            android:layout_alignStart="@+id/textView_server_ip_addr"
            android:layout_below="@+id/textView_server_ip_addr"
            android:layout_marginTop="10dp"
            android:gravity="bottom"
            android:text="@string/string_port" />

        <EditText
            android:id="@+id/editText_server_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView_server_port"
            android:layout_alignTop="@+id/textView_server_port"
            android:layout_toEndOf="@+id/textView_server_setting"
            android:layout_toRightOf="@+id/textView_server_setting"
            android:ems="10"
            android:gravity="bottom"
            android:inputType="numberSigned"
            android:textColor="#00A0FF" />
    </RelativeLayout>

    <LinearLayout
