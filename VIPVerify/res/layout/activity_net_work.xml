            android:layout_height="wrap_content"
            
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/string_cancel"
            android:textColor="@color/button_text_color" />
    </LinearLayout>

</RelativeLayout>